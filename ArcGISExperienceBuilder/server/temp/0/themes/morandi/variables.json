      },
      "body": {
        "bg": "var(--primary-100)",
        "color": "var(--dark-400)"
      },
      "footer": {
        "bg": "var(--primary-200)",
        "color": "var(--dark-400)"
      }
    }
  },
  "surfaces": {
    "1": {
      "bg": "var(--light-400)",
      "border": {
        "color": "var(--light-600)"
      }
    },
    "2": {
      "bg": "var(--light-300)",
      "border": {
        "color": "var(--light-600)"
      }
    },
    "3": {
      "bg": "var(--light-300)",
      "border": {
        "color": "var(--light-500)"
      }
    }
  },
  "link": {
    "color": "var(--dark-400)",
    "hover": {
      "color": "var(--dark-600)"
    }
  },
  "components": {
    "button": {
      "sizes": {
        "default": {
          "borderRadius": "100px"
        },
        "sm": {
          "borderRadius": "100px"
        },
        "lg": {
          "borderRadius": "100px"
        }
      },
      "variants": {
        "default": {
          "default": {
            "color": "var(--black)",
            "bg": "var(--light-500)",
            "border": {
              "color": "var(--light-500)"
            }
          },
          "hover": {
            "bg": "var(--light-800)"
          },
          "disabled": {
            "color": "var(--dark-200)",
            "bg": "var(--light-500)",
            "border": {
              "color": "var(--light-500)"
            }
          }
        },
        "primary": {
          "default": {
            "color": "var(--black)",
            "bg": "var(--primary-400)",
            "border": {
              "color": "var(--primary-400)"
            }
          },
          "hover": {
            "bg": "var(--primary-500)"
          },
          "disabled": {
            "color": "var(--dark-200)",
            "bg": "var(--light-500)",
            "border": {
              "color": "var(--light-500)"
            }
          }
        },
        "secondary": {
          "default": {
            "color": "var(--primary)",
            "border": {
              "color": "var(--primary)"
            }
          },
          "hover": {
            "color": "var(--black)",
            "bg": "var(--primary)"
          },
          "disabled": {
            "color": "var(--dark-200)",
            "bg": "var(--light-500)",
            "border": {
              "color": "var(--light-500)"
            }
          }
        },
        "tertiary": {
          "default": {
            "color": "var(--dark-600)"
          },
          "hover": {
            "color": "var(--primary-600)"
          },
          "disabled": {
            "color": "var(--dark-200)",
            "bg": "var(--light-500)",
            "border": {
              "color": "var(--light-500)"
            }
          }
        },
        "link": {
          "default": {
            "color": "var(--dark-400)"
          },
          "hover": {
            "color": "var(--dark-600)"
          },
          "disabled": {
            "color": "var(--dark-200)",
            "bg": "var(--light-500)",
            "border": {
              "color": "var(--light-500)"
            }
          }
        }
      }
    },
    "nav": {
      "variants": {
        "underline": {
          "size": {
            "paddingY": "0.5rem"
          },
          "item": {
            "default": {
              "color": "var(--dark-400)"
            },
            "hover": {
              "color": "var(--black)"
            },
            "active": {
              "color": "var(--primary-600)",
              "border": {
                "color": "var(--primary-600)"
              }
            }
          }
        },
        "pills": {
          "item": {
            "default": {
              "color": "var(--dark-600)"
            },
            "hover": {
              "color": "var(--primary-600)"
            },
            "active": {
              "color": "var(--white)"
            }
          }
        }
      }
    },
    "input": {
      "bg": "var(--light-200)",
      "border": {
        "color": "var(--light-200)",
        "width": "1px"
      }
    },
    "modal": {
      "content": {
        "bg": "var(--light-300)",
        "borderRadius": 0,
        "shadow": "none",
        "shadowSmUp": "none"
      },
      "header": {
        "border": {
          "width": 0
        }
      },
      "backdrop": {
        "bg": "var(--white)"
      }
    }
  }
